page{
  height: 100%;
  background-color: #F4F6F7;
  font-size:32rpx;
}
.more{
  margin-top:-10rpx;
}
.comment {
  margin-bottom:20rpx;
  background-color:#fff;
  padding:0 0 0 10rpx;
}
.weui-loadmore_line{
  margin:1.6em auto -0.6em;
}
.weui-loadmore__tips_in-line{
  background: rgba(0,0,0,0);
}
.comment_avatar{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  float: left;
  margin-top:10rpx;
}
.first-floor-content{
  padding: 0;
}
.flex-container .flex-t,.flex-container .flex-m{
  padding: 20rpx 40rpx;
}

.flex-container .flex-b{
  padding: 0 40rpx;
}
.comment .flex-t,.comment .flex-b,.comment .flex-m{
  padding: 0 20rpx;
}
.comment .flex-m,.comment .flex-b{
  line-height:100rpx;
}
.double-floor{
  width: 92%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx;
  background-color : #F4F6F7;
  overflow: auto;
}
.double-floor navigator{
  padding-top: 10rpx;
  padding-bottom:10rpx;
}

.post_comment{
  width: 100%;
  height: 80rpx;
  background: #fff;
  color: #999;
  text-indent: 10rpx;
  position: fixed;
  bottom: 0;
  padding: 10rpx;
}
.user_avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.post_comment text{
  font-size: 28rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.comment_component_c{
  float: right;
  /*margin-right:-70rpx;*/
}
.double-floor-item{
  display: inline;
  line-height:64rpx;
  word-wrap: break-word;
  overflow: hidden;
  white-space: normal;
}
.delete{
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
  color:#e64340;
}